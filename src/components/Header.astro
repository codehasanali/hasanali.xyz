---
import { Icon } from 'astro-icon'
---

<header class="wrapper">
	<nav class="navbar">

		<a href="/">
			<img class="me"
				src="https://media-exp1.licdn.com/dms/image/C4D03AQGDS35ymxY8uA/profile-displayphoto-shrink_800_800/0/1657371203966?e=1664409600&v=beta&t=mWFsqALdOMWE4L57LARKJCKHn8jFiRt5iTFv-pIOqbQ"
				alt="me" />
		</a>
		<div class="icon_div"><a>
				<Icon pack="mdi" name="instagram" class="icon" />
			</a>
			<a>
				<Icon pack="mdi" name="twitter" class="icon" />
			</a>
		</div>
	</nav>
</header>

<style>
	.icon_div {
		margin-top: 12px;
		display: flex;

		gap: 0.5rem;
	}
	.icon {
		width: 1.5rem;
		height: 1.5rem;
	}

	.navbar {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}

	.socail {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	header {
		padding-top: 1rem;
		padding-bottom: 1rem;
		height: 5rem;
		flex: flex;
		justify-content: center;
		align-items: center;

	}

	.me {
		widows: 120px;
		height: 120px;
		border-radius: 100px;
	}

	svg {
		width: 2.5rem;
		height: 2.5rem;
	}

	a {
		text-decoration: none;
		display: inline-flex;
	}
</style>